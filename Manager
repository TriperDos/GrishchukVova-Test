using System.Collections;
using System.Collections.Generic;
using UnityEngine.UI;
using UnityEngine;
using UnityEngine.SceneManagement;

public class Manager : MonoBehaviour
{
    Camera cam;                         //главная камера
    public GameObject GameOver_menu;    //меню проигрыша
    public ParticleSystem ps;           //туман

    public Text health;                 //жизни
    public Text score;                  //очки
    public Text score_menu;             //очки для меню

    private float health_count = 3;     //начальное значение жизней
    private float score_count;          //очки
    private float score_count_menu;     //очки для меню

    bool gameHasEnded = false;          //проверка на окончание игры



    private void Start()
    {
        cam = Camera.main;
    }

    void Update()
    {
        if (Input.GetMouseButtonDown(0))
        {
            
            Ray ray = cam.ScreenPointToRay(Input.mousePosition);
            RaycastHit hit;

            if (Physics.Raycast(ray, out hit))
            {
                if (hit.transform.gameObject.tag == "unit(good)")
                {
                    GameOver();
                }
                Upscore();
                Move.speed += 0.4f;
                Move.timer -= 0.02f;
                GameObject.Destroy(hit.transform.gameObject);
            }
        }
    }
    //уменьшение жизни
    public void Downhealth()
    {
        health_count--;

        if (health_count == 1)
        {
            var main = ps.main;
            main.startColor = new ParticleSystem.MinMaxGradient(Color.red);
        }
        else if (health_count == 0)
        {
            GameOver();
        }

        health.text = "Heath: " + health_count;
    }

    //увеличение очков
    public void Upscore()
    {
        score_count++;
        score_count_menu++;
        score.text = "Score: " + score_count;
        score_menu.text = "YOUR SCORE " + score_count_menu + " !!!";
    }
    //игра окончена
    public void GameOver()
    {
        if (gameHasEnded == false)
        {
            gameHasEnded = true;
            Time.timeScale = 0;
            GameOver_menu.SetActive(!GameOver_menu.activeSelf);
        }
    }
    //рестарт игры
    public void Restart()
    {
        SceneManager.LoadScene(SceneManager.GetActiveScene().name);
        Time.timeScale = 1;
        Move.speed = 7;
        Move.timer = 1;
    }
}

